        "content": [ 
            { "xpath": "//div[@id='zh-content']/p", "expect":-1, "index": "merge_all" }
        ],
        "time": [
            { "xpath": "//time/text()", "expect":1, "index":0 }
        ]
    },
	"ignore_urls_regex": [],
