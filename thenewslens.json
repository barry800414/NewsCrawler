	".*\\/aboutus\\/*",
	".*\\/rss-list\\/*",
	".*\\/feature_story\\/*",
	".*\\/author\\/*",
	".*\\/jobs\\/*"
        ],
    "start_urls": [ 
	"http://www.thenewslens.com/news-list"
	
	],
    "xpath": {
        "title": [
            { "xpath": "//div/h1[@class='text-center']/text()", "expect":1, "index": 0 }
